<PongBall>:
    size:50,50
    canvas:
        Ellipse:
            size:self.size
            pos:self.pos

<PongPaddle>:
    size:25,200
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos

<PongGame>:
    ball:pongball
    player1:player_left
    player2:player_right
    canvas:
        Rectangle:
            size:20,root.height
            pos:self.center_x-5,0
    
    Label:
        font_size:70
        text:str(root.player1.score)
        center_x:root.width/4
        top:root.top

    Label:
        font_size:70
        text:str(root.player2.score)
        center_x:root.width*3/4
        top:root.top
        
    PongBall:
        id:pongball
        center : self.parent.center

    PongPaddle:
        id:player_left
        x:root.x
        center_y:root.center_y
    
    PongPaddle:
        id:player_right
        right:root.width
        center_y:root.center_y
    
